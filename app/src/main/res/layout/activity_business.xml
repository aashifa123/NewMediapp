<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.subia.home.Business"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hospitalCard"
        android:layout_marginTop="20dp"
        android:text="Add Business"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/addBusiness"

        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/hospitalCard"
        android:layout_alignTop="@+id/select" />

    <android.support.v7.widget.CardView
        android:id="@+id/hospitalCard"
        android:layout_width="350dp"
        android:layout_height="490dp"
        android:layout_below="@+id/addBusiness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="85dp"
            android:text="Address:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hospitalAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="73dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="137dp"
            android:text="Country:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/hospitalCountry"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="140dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="185dp"
            android:text="State:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/hospitalState"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="178dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="240dp"
            android:text="City:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hospitalCity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="228dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="295dp"
            android:text="Pincode:"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/hospitalPincode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="282dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="29dp"
            android:text="Hospital Name:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hospitalName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/addHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/butn"
            android:text="Submit"
            android:onClick="addHospital"/>


    </android.support.v7.widget.CardView>
